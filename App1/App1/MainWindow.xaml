<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
       <!--TITRE PAGE-->
        <TextBlock Text="Menu principal" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
        
        <!--STACKPANEL AVEC LES DIFFÉRENTS BOUTONS-->        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,10">
            <Button x:Name="btnAjoutEmploye" Content="Ajouter un employe" Click="btnAjoutEmploye_Click" Margin="0,0,10,0"></Button>
            <Button x:Name="btnAjoutProjet" Content="Ajouter un projet" Click="btnAjoutProjet_Click" Margin="0,0,10,0"></Button>
            <Button x:Name="btnRecherche" Content="Rechercher un employe" Click="btnRecherche_Click" Margin="0,0,10,0"></Button>
            <Button x:Name="btnAffichage" Content="Afficher les projets" Click="btnAffichage_Click"></Button>
        </StackPanel>

        <!--FRAME POUR AFFICHAGE DES DIFFÉRENTES PAGES-->
        <Frame x:Name="mainFrame" Height="auto" Width="auto"></Frame>


    </StackPanel>
</Window>
